@model UserVM 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListAdmin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/vue@next"></script>
</head>
<body>
    <div>
        @{
            foreach (AppUser item in Model.Users)
            {
                <div class=" mt-4 bg-sky-500">
                    <label>@item.UserName</label>
                    <br />
                    <label>@item.UserProfile.FirstName</label>
                    <br />
                    <label>@item.UserProfile.Email</label>

                    <br />
                    <button class="w-72 mt-4 text-teal-300  bg-teal-700 hover:bg-emerald-400 font-bold hover:text-cyan-900 py-2 px-4 rounded focus:outline-none focus:shadow-outline" style="height:50px;">

                        @Html.ActionLink("Update", "UpdateAdmin", new { id = item.ID }, new { @class = "btn btn-warning" })
                    </button>
                    <br />

                    <button class="w-72 mt-4 text-teal-300  bg-teal-700 hover:bg-emerald-400 font-bold hover:text-cyan-900 py-2 px-4 rounded focus:outline-none focus:shadow-outline" style="height:50px;">



                        @Html.ActionLink("Delete", "DeleteAdmin", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </button>
                    <br />
                    <button class="w-72 mt-4 text-teal-300  bg-teal-700 hover:bg-emerald-400 font-bold hover:text-cyan-900 py-2 px-4 rounded focus:outline-none focus:shadow-outline" style="height:50px;">

                        @Html.ActionLink("AddAdmin", "AddAdmin", new { @class = "btn btn-warning" })
                    </button>

                    <div class="mt-4">
                        <div class="">
                            <button class="w-48 mt-4 text-teal-300  bg-teal-700 hover:bg-emerald-400 font-bold hover:text-cyan-900 py-2 px-4 rounded focus:outline-none focus:shadow-outline" style="height:50px;">
                                @Html.ActionLink("List Vehicle", "ListVehicle", "Admin", new { Area = "Admin" })
                            </button>

                        </div>


                    </div>

                </div>




            }

        }


    </div>
</body>
</html>
